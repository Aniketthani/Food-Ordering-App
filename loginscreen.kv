#: import dp kivy.metrics.dp
<LoginScreen>

    ScrollView:
        size_hint:1,None
        height:10*root.height/10
            
        MDBoxLayout:
            orientation: 'vertical'
            spacing:dp(20)
            size_hint_y:0.9
            on_minimum_height:self.setter('height')
            MDToolbar:
                title:"Login"

            Image:
                source:"images/food.png"
                size_hint: 0.7,0.4 
                pos_hint: {'center_x':0.5 , 'center_y':0.5 }

            MDTextFieldRound:
                id:mobile
                hint_text:"Phone Number"
                icon_right:'cellphone'
                size_hint_x: 0.7
                pos_hint: {'center_x':0.5 , 'center_y':0.5 }
                write_tab:False

            MDTextFieldRound:
                id:password
                hint_text:"Password"
                password:True
                icon_right:'eye-off'
                size_hint_x: 0.7
                pos_hint: {'center_x':0.5 , 'center_y':0.5 }
                write_tab:False

            MDRaisedButton:
                text:"Login"
                pos_hint: {'center_x':0.5 , 'center_y':0.5 }
                on_release:root.login()


            MDFlatButton:
                text:"Register For Users"
                pos_hint:{'center_x':0.5 , 'center_y':0.5 }
                theme_text_color:"Custom"
                text_color:(0,0,1,1)
                on_release: root.parent.current="register_user"

            MDFlatButton:
                text:"Register For Restaurants"
                pos_hint:{'center_x':0.5 , 'center_y':0.5 }
                theme_text_color:"Custom"
                text_color:(0,0,1,1)
                on_release: root.parent.current="register_restaurant"

            MDLabel:
                id:message
                text:""
                theme_text_color:"Custom"
                text_color:(0,0,0,1)
                size_hint_y:0.1
                halign:'center'
                markup:True
            