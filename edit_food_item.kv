<Content>
    orientation: "vertical"
    spacing: "18dp"
    size_hint_y: None
    height: "300dp"

    MDTextField:
        id:food
        hint_text:"Food Name"
        text:root.food_name
        write_tab:False
        theme_text_color:"Custom"
        text_color:(0,0,1,1)

    MDTextField:
        id:desc
        hint_text:"Description"
        text:root.food_desc
        write_tab:False
        theme_text_color:"Custom"
        text_color:(0,0,1,1)


    MDTextField:
        id:price
        hint_text:"Price"
        text:root.food_price
        write_tab:False
        theme_text_color:"Custom"
        text_color:(0,0,1,1)


    GridLayout:
        size_hint_y:0.1
        size_hint_x:0.7
        pos_hint:{'center_x':0.5}
        cols:4
        CheckBox:
            id:veg
            group:'Veg'
            color:(1,0,0,1)
            size_hint_x:0.2
            on_active:root.veg_radio_selection(is_veg=True)
            active:True
        MDLabel:
            text:"Veg"
            size_hint_x:0.3
        CheckBox:
            id:nonveg
            group:'Veg'
            color:(1,0,0,1)
            size_hint_x:0.2
            on_active:root.veg_radio_selection(is_veg=False)
        MDLabel:
            text:"Nonveg"
            size_hint_x:0.3
    
    MDRoundFlatIconButton:
        id:choose_image_button
        text: "Choose Image"
        icon: "folder"
        pos_hint: {'center_x': .5}
        on_release: root.file_manager_open()



    


