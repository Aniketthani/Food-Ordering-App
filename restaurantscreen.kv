#: import Edit_Food_Item_Screen edit_food_item_screen.Edit_Food_Item_Screen
#: import Delete_Food_Item_Screen delete_food_item_screen.Delete_Food_Item_Screen
<ContentNavigationDrawer>:

    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"

    AnchorLayout:
        anchor_x: "left"
        size_hint_y: None
        height: avatar.height

        Image:
            id: avatar
            size_hint: None, None
            size: "56dp", "56dp"
            source: "images/food.png"

    MDLabel:
        text: root.parent.parent.parent.r_name
        font_style: "Button"
        size_hint_y: None
        height: self.texture_size[1]
        theme_text_color:"Custom"
        text_color:(0.24,0.26,0.38,1)

    MDLabel:
        text: "Id: "+root.parent.parent.parent.Id
        font_style: "Caption"
        size_hint_y: None
        height: self.texture_size[1]
        

    ScrollView:

        MDList:
            spacing:10
            padding:0
            OneLineIconListItem:
                id:add_food_item_screen
                text: "Add Food Item"
                theme_text_color:"Custom"
                text_color:(1,0.8,0.24,1)
                font_style:"H6"
                bg_color:(0.2,0.2,0.444,1)
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "add_food_item"
                    root.parent.parent.parent.load_dropdown_items()

                IconLeftWidget:
                    icon: "language-python"
                    theme_text_color:"Custom"
                    text_color:(0,0.58,0.3,1)
                

            OneLineIconListItem:
                text: "Edit Food Item"
                theme_text_color:"Custom"
                text_color:(1,0.8,0.24,1)
                font_style:"H6"
                bg_color:(0.2,0.2,0.444,1)
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "edit_food_item"
                    root.parent.parent.parent.ids.edit_food_item_screen.display_food_items()
                IconLeftWidget:
                    icon: "language-python"
                    theme_text_color:"Custom"
                    text_color:(0,0.58,0.3,1)
            
            OneLineIconListItem:
                text: "Delete Food Item"
                theme_text_color:"Custom"
                text_color:(1,0.8,0.24,1)
                font_style:"H6"
                bg_color:(0.2,0.2,0.444,1)
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "delete_food_item"
                    root.parent.parent.parent.ids.delete_food_item_screen.display_food_items()
                IconLeftWidget:
                    icon: "language-python"
                    theme_text_color:"Custom"
                    text_color:(0,0.58,0.3,1)
                


<Restaurant_Screen>

    MDToolbar:
        id: toolbar
        pos_hint: {"top": 1}
        elevation: 10
        title: root.r_name
        left_action_items: [["menu", lambda x: nav_drawer.set_state("open"),"Office Menu"]]
        right_action_items:[["logout",lambda x:x,"Logout"]]
        
        
            
    MDNavigationLayout:
        x: toolbar.height

        ScreenManager:
            id: screen_manager

            Screen:
                name: "add_food_item"

                
                MDBoxLayout:
                    spacing:"10dp"
                    padding:"10dp"
                    orientation:'vertical'
                    Widget:
                        size_hint_y:0.12
                    MDLabel:
                        text: "Add Food Item"
                        halign: "center"
                        font_style:"H5"
                        theme_text_color:"Custom"
                        text_color:(1,0,0,1)
                        size_hint:(1,0.1)
                    MDTextField:
                        id:f_name
                        hint_text: "Food Name"
                        size_hint_x:0.7
                        pos_hint:{'center_x':0.5}
                        write_tab:False
                    MDTextField:
                        id:f_desc
                        hint_text: "Description"
                        size_hint_x:0.7
                        pos_hint:{'center_x':0.5}
                        write_tab:False

                    MDTextField:
                        id:f_price
                        hint_text: "Price"
                        size_hint_x:0.7
                        pos_hint:{'center_x':0.5}
                        write_tab:False

                    GridLayout:
                        size_hint_y:0.1
                        size_hint_x:0.7
                        pos_hint:{'center_x':0.5}
                        cols:4
                        CheckBox:
                            id:veg
                            group:'Veg'
                            color:(1,0,0,1)
                            size_hint_x:0.2
                            on_active:root.veg_radio_selection(is_veg=True)
                            active:True
                        MDLabel:
                            text:"Veg"
                            size_hint_x:0.3
                        CheckBox:
                            id:nonveg
                            group:'Veg'
                            color:(1,0,0,1)
                            size_hint_x:0.2
                            on_active:root.veg_radio_selection(is_veg=False)
                        MDLabel:
                            text:"Nonveg"
                            size_hint_x:0.3
                    
                    
                    

                    MDRectangleFlatIconButton:
                        id: field
                        icon: "arrow-down-drop-circle-outline"
                        text: "Category"
                        pos_hint: {'center_x': .5}
                        theme_text_color: "Custom"
                        
                        line_color: 1, 0, 0, 1
                        icon_color: 0, 0, 1, 1
                        on_release:root.menu.open()
                        

                    MDRoundFlatIconButton:
                        id:file_manager_button
                        text: "Choose Image"
                        icon: "folder"
                        pos_hint: {'center_x': .5}
                        on_release: root.file_manager_open()

                    Widget:
                        size_hint:1,0.05

                    MDRaisedButton:
                        text:"Submit"
                        pos_hint:{'center_x':0.5}
                        on_release:root.add_food()
                    Widget:
                        size_hint:1,0.05
                    
                    


            Edit_Food_Item_Screen:
                name: "edit_food_item"
                id:edit_food_item_screen
                restaurant_id:root.Id

            Delete_Food_Item_Screen:
                name: "delete_food_item"
                id:delete_food_item_screen
                restaurant_id:root.Id

        MDNavigationDrawer:
            id: nav_drawer

            ContentNavigationDrawer:
                screen_manager: screen_manager
                nav_drawer: nav_drawer